# Telegram Bot Token
BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Key (for story generation)
OPENAI_API_KEY=your_openai_api_key_here

# Grok API Key (alternative to OpenAI, optional)
GROK_API_KEY=your_grok_api_key_here

# GenAI Pro API Key (for TTS)
GENAIPRO_API_KEY=your_genaipro_api_key_here

# OpenAI Model (optional, defaults to gpt-4o-mini)
# OPENAI_MODEL=gpt-4o-mini

# FFmpeg binary path (optional, auto-detected if in PATH)
# FFMPEG_BIN=/usr/bin/ffmpeg
# FFPROBE_BIN=/usr/bin/ffprobe

# ImageMagick binary path (optional)
# IMAGEMAGICK_BINARY=/usr/bin/magick

# Database path (optional, defaults to db/youtube_farm.db)
# DB_PATH=db/youtube_farm.db

# Logging level (optional, defaults to INFO)
# LOG_LEVEL=INFO
